@model GoalDigger.MVC.Models.UserViewModel

<form action = "/home/index" method = "post">
  @Html.AntiForgeryToken()
  
  <div class = "form-group row">
    <label asp-for="@Model.Username" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input type ="text" asp-for="@Model.Username" class="form-control" placeholder="Username"/>
    </div>
  </div> 
  @Html.ValidationMessageFor(u => u.Username)

  <div class = "form-group row">
  <label asp-for="@Model.Password" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10"> 
      <input type ="password" asp-for="@Model.Password" class="form-control" placeholder="Password"/>
    </div>
  </div>
  @Html.ValidationMessageFor(u => u.Password)
  
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </div>

</form>
