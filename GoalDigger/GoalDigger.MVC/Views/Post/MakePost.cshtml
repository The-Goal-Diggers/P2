@model GoalDigger.MVC.Models.PostViewModel


<form action = "/post/makepost" method = "post">
  @Html.AntiForgeryToken()
  
  <div class = "form-group row">
    <label asp-for="@Model.Body" class="col-sm-2 col-form-label">Post</label>
    <div class="col-sm-10">
      <input type ="text" asp-for="@Model.Body" class="form-control" placeholder="Write your post!"/>
    </div>
  </div> 
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>